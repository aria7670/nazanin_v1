# Nazanin AI Bot - Environment Variables
# Copy this file to .env and fill in your values

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_REPORT_CHANNEL_ID=your_channel_id
TELEGRAM_ADMIN_USER_ID=your_user_id
TELEGRAM_STORAGE_CHANNEL_ID=your_storage_channel_id

# Twitter Configuration
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# AI API Keys
GEMINI_API_KEYS=key1,key2,key3
OPENAI_API_KEYS=key1,key2
CLAUDE_API_KEYS=key1,key2
DEEPSEEK_API_KEYS=key1,key2

# Advanced Features
ENABLE_BRAIN_SIMULATION=true
ENABLE_QUANTUM_AGENT=true
ENABLE_NEURAL_AGENT=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=nazanin.log

# Performance
MAX_WORKERS=4
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
